{
  "name": "midoks/php-eureka-client",
  "description": "PHP client for the Netflix Eureka server.",
  "keywords": ["eureka", "Netflix-eureka", "eureka client"],
  "homepage": "https://github.com/midoks/eureka-client",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "midoks",
      "homepage": "https://github.com/midoks/eureka-client"
    }
  ],
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "~5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0"
  },
   "autoload": {
        "psr-4": {
            "Euraka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Euraka\\Tests\\": "tests/"
        }
    },
  "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
